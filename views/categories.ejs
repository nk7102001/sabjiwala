<!DOCTYPE html>
<html lang="en">
<head>
  <title>All Categories | Sabjiwala</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800 font-sans">

  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Main Content -->
  <main class="w-full py-8 sm:py-12 px-4 sm:px-6 lg:px-8 min-h-screen">
    
    <!-- Page Heading -->
    <h1 class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-green-700 mb-10 text-center tracking-wide">
      All Sabji Categories
    </h1>

    <!-- Categories Grid -->
    <% const _cats = Array.isArray(sabjiCategories) ? sabjiCategories : []; %>
    <% if (_cats.length === 0) { %>
      <p class="text-center text-gray-600 max-w-3xl mx-auto">
        No categories available right now. Please check back later.
      </p>
    <% } else { %>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-5 sm:gap-6 lg:gap-8 max-w-7xl mx-auto">
        <% _cats.forEach((cat) => { %>
          <a href="/products/<%= cat.slug %>" 
             class="group bg-white rounded-2xl border border-green-100 shadow-sm hover:shadow-lg overflow-hidden transition-all duration-300 hover:-translate-y-1 focus:ring-4 focus:ring-green-300">
            
            <!-- Image Section -->
            <div class="aspect-[4/3] overflow-hidden">
              <img src="<%= cat.imageUrl %>" 
                   alt="<%= cat.name %>" 
                   class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-500" />
            </div>

            <!-- Text Section -->
            <div class="p-4 text-center">
              <h3 class="font-semibold text-base sm:text-lg text-gray-800 group-hover:text-green-600 transition-colors duration-200">
                <%= cat.name %>
              </h3>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </main>

  <!-- Footer -->
  <%- include('partials/footer') %>
</body>
</html>

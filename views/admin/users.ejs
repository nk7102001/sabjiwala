<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Registered Users - Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen flex flex-col font-sans">

  <!-- ✅ Navbar -->
  <%- include('../partials/navbar') %>

  <!-- Main -->
  <main class="flex-grow w-full px-3 sm:px-6 lg:px-8 py-6 sm:py-10" role="main" aria-labelledby="pageTitle">

    <!-- Title -->
    <h1 id="pageTitle" class="text-2xl sm:text-3xl font-extrabold text-green-700 mb-6">
      Registered Users
    </h1>

    <!-- Search Bar -->
    <% const _search = typeof search !== 'undefined' ? search : ''; %>
    <form method="GET"
          class="bg-white shadow-md rounded-lg p-4 flex flex-col sm:flex-row gap-3 mb-6">
      <input type="text" name="search" placeholder="Search by name/email"
             value="<%= _search || '' %>"
             class="border rounded px-3 py-2 w-full sm:w-64 focus:outline-none focus:ring-2 focus:ring-green-600" />
      <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        Search
      </button>
    </form>

    <!-- Users Table -->
    <div class="bg-white shadow-md rounded-lg overflow-x-auto">
      <% const _users = Array.isArray(users) ? users : []; %>
      <table class="w-full min-w=[700px] border-collapse text-left">
        <thead class="bg-green-200 text-gray-900">
          <tr>
            <th class="px-4 py-2 border">Name</th>
            <th class="px-4 py-2 border">Email</th>
            <th class="px-4 py-2 border">Phone</th>
            <th class="px-4 py-2 border">Status</th>
            <th class="px-4 py-2 border">Joined</th>
            <th class="px-4 py-2 border text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if(_users.length === 0) { %>
            <tr>
              <td colspan="6" class="text-center py-4 text-gray-500">
                No users found
              </td>
            </tr>
          <% } else { %>
            <% _users.forEach((user) => { %>
              <tr class="border-b hover:bg-green-50">
                <td class="px-4 py-2 text-sm sm:text-base"><%= user.name || '' %></td>
                <td class="px-4 py-2 text-sm sm:text-base break-words"><%= user.email || '' %></td>
                <td class="px-4 py-2 text-sm sm:text-base"><%= user.phone || '-' %></td>
                <td class="px-4 py-2 text-sm sm:text-base">
                  <% if (user.isBlocked) { %>
                    <span class="text-red-600 font-semibold">Blocked</span>
                  <% } else { %>
                    <span class="text-green-600 font-semibold">Active</span>
                  <% } %>
                </td>
                <td class="px-4 py-2 text-sm sm:text-base">
                  <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : '' %>
                </td>
                <td class="px-4 py-2 flex flex-wrap gap-2 justify-center">
                  <% if (!user.isBlocked) { %>
                    <form action="/admin/users/<%= user._id %>/block" method="POST">
                      <button class="bg-red-600 text-white px-3 py-1 rounded text-sm hover:bg-red-700">
                        Block
                      </button>
                    </form>
                  <% } else { %>
                    <form action="/admin/users/<%= user._id %>/unblock" method="POST">
                      <button class="bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700">
                        Unblock
                      </button>
                    </form>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

  </main>

  <!-- ✅ Footer -->
  <%- include('../partials/footer') %>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Saved Addresses - Sabjiwala</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col font-sans">

  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Page Container -->
  <main class="flex-grow w-full py-6 sm:py-10 px-3 sm:px-6 lg:px-8 flex flex-col gap-8 sm:gap-10">

    <!-- Page Title -->
    <h1 class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-green-700">
      Saved Addresses
    </h1>

    <!-- Flash Messages -->
    <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length) { %>
      <div class="bg-green-100 text-green-700 p-3 sm:p-4 rounded text-sm sm:text-base shadow-sm">
        <%= Array.isArray(success_msg) ? success_msg.join('<br/>') : success_msg %>
      </div>
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length) { %>
      <div class="bg-red-100 text-red-700 p-3 sm:p-4 rounded text-sm sm:text-base shadow-sm">
        <%= Array.isArray(error_msg) ? error_msg.join('<br/>') : error_msg %>
      </div>
    <% } %>

    <!-- Address List -->
    <div class="grid gap-6 md:grid-cols-2">
      <% const _addresses = Array.isArray(addresses) ? addresses : []; %>
      <% if (_addresses.length === 0) { %>
        <p class="text-gray-700">No saved addresses found.</p>
      <% } else { %>
        <% _addresses.forEach((addr) => { %>
          <div class="bg-white p-5 sm:p-6 rounded-lg shadow border border-green-200 relative hover:shadow-lg transition">
            <!-- Label -->
            <h3 class="text-lg font-semibold mb-2 text-green-700"><%= addr.label || 'Address' %></h3>

            <!-- Details -->
            <ul class="space-y-1 text-sm sm:text-base text-gray-700">
              <li><span class="font-semibold">Name:</span> <%= addr.name || '' %></li>
              <li><span class="font-semibold">Phone:</span> <%= addr.phone || '' %></li>
              <li><span class="font-semibold">Street:</span> <%= addr.street || '' %></li>
              <li><span class="font-semibold">City:</span> <%= addr.city || '' %></li>
              <li><span class="font-semibold">State:</span> <%= addr.state || '' %></li>
              <li><span class="font-semibold">Pincode:</span> <%= addr.pincode || '' %></li>
              <li><span class="font-semibold">Country:</span> <%= addr.country || '' %></li>
            </ul>

            <!-- Delete Button -->
            <form action="/address/delete/<%= addr._id %>" method="POST" class="absolute top-4 right-4">
              <button
                type="submit"
                class="text-red-600 hover:text-red-800 font-semibold text-sm sm:text-base"
                title="Delete address">
                âœ• Delete
              </button>
            </form>
          </div>
        <% }) %>
      <% } %>
    </div>

    <!-- Add New Address Form -->
    <section class="bg-white p-6 sm:p-8 rounded-lg shadow border border-green-200">
      <h2 class="text-xl sm:text-2xl font-semibold mb-6 text-green-700">
        Add New Address
      </h2>
      <form action="/address/saved" method="POST" class="space-y-4">
        <!-- Input Fields -->
        <div>
          <label for="label" class="block font-semibold mb-1 text-gray-700">Label (Home, Office)</label>
          <input required id="label" name="label" type="text" placeholder="Home"
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <div>
          <label for="name" class="block font-semibold mb-1 text-gray-700">Name</label>
          <input required id="name" name="name" type="text" placeholder="Full Name"
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <div>
          <label for="phone" class="block font-semibold mb-1 text-gray-700">Phone</label>
          <input required id="phone" name="phone" type="text" placeholder="Phone Number"
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <div>
          <label for="street" class="block font-semibold mb-1 text-gray-700">Street Address</label>
          <input required id="street" name="street" type="text" placeholder="123, Main St."
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <div>
          <label for="city" class="block font-semibold mb-1 text-gray-700">City</label>
          <input required id="city" name="city" type="text" placeholder="City"
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <div>
          <label for="state" class="block font-semibold mb-1 text-gray-700">State</label>
          <input required id="state" name="state" type="text" placeholder="State"
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <div>
          <label for="pincode" class="block font-semibold mb-1 text-gray-700">Pincode</label>
          <input required id="pincode" name="pincode" type="text" placeholder="Pincode"
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <div>
          <label for="country" class="block font-semibold mb-1 text-gray-700">Country</label>
          <input id="country" name="country" type="text" placeholder="India"
                 value="India"
                 class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-green-600 text-sm sm:text-base" />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition font-semibold text-sm sm:text-base">
          Add Address
        </button>
      </form>
    </section>

  </main>

  <!-- Footer -->
  <%- include('partials/footer') %>
</body>
</html>

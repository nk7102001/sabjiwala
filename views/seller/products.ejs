<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Products | Sabjiwala Seller Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col font-sans">

  <!-- Navbar -->
  <%- include('../partials/navbar') %>

  <!-- Main -->
  <main class="flex-grow max-w-7xl mx-auto p-6" role="main">
    <h1 class="text-2xl font-bold text-green-700 mb-6">üì¶ My Products</h1>

    <% const _products = Array.isArray(products) ? products : []; %>
    <% if (_products.length === 0) { %>
      <div class="bg-white p-6 rounded shadow text-center text-gray-500">
        No products yet. 
        <a href="/seller/products/add" class="text-green-600 font-semibold">Add one now</a>.
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <% _products.forEach((p) => { %>
          <div class="bg-white rounded-lg shadow hover:shadow-lg transition p-4 flex flex-col">

            <!-- Product Name -->
            <h2 class="text-lg font-bold text-gray-800 mb-2">
              <%= p.name || 'Unnamed Product' %>
            </h2>

            <!-- Product Image -->
            <% if (p.imageUrl) { %>
              <img
                src="<%= p.imageUrl %>"
                alt="<%= p.name || 'Product Image' %>"
                class="w-full h-40 object-cover mb-3 rounded border">
            <% } else { %>
              <div class="w-full h-40 flex items-center justify-center bg-gray-100 border mb-3 rounded text-gray-400 text-sm">
                No image
              </div>
            <% } %>

            <!-- Price & Quantity -->
            <p class="mb-1">üí∞ Price: ‚Çπ<%= (p.pricePerKg !== undefined && p.pricePerKg !== null) ? p.pricePerKg : 'N/A' %></p>
            <p class="mb-3">üì¶ Qty: <%= (p.availableQty !== undefined && p.availableQty !== null) ? p.availableQty : 'N/A' %> Kg</p>

            <!-- Edit & Delete Buttons -->
            <div class="mt-auto flex space-x-2">
              <a href="/seller/products/edit/<%= p._id %>"
                 class="flex-1 bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded text-center">
                 ‚úèÔ∏è Edit
              </a>

              <form action="/seller/products/delete/<%= p._id %>" method="POST" class="flex-1">
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this product?')"
                  class="w-full bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded">
                  üóë Delete
                </button>
              </form>
            </div>

          </div>
        <% }) %>

      </div>
    <% } %>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

</body>
</html>

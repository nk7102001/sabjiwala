<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Products | Sabjiwala</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen flex flex-col font-sans">

  <!-- ✅ Navbar -->
  <%- include('../partials/navbar') %>

  <!-- Main -->
  <main class="flex-grow w-full px-3 sm:px-6 lg:px-8 py-6 sm:py-10 max-w-7xl mx-auto" role="main" aria-labelledby="pageTitle">
    
    <!-- Page Title -->
    <h1 id="pageTitle" class="text-2xl sm:text-3xl font-extrabold text-green-700 mb-6 sm:mb-8">
      All Products
    </h1>

    <% const _products = Array.isArray(products) ? products : []; %>
    <% if (_products.length === 0) { %>
      <p class="text-gray-600 text-sm sm:text-base">No products available.</p>
    <% } else { %>
    
      <!-- Products Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5 sm:gap-6">
        <% _products.forEach((prod) => { %>
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-lg transition overflow-hidden flex flex-col">
            
            <!-- Product Image -->
            <% if (prod.imageUrl) { %>
              <div class="overflow-hidden">
                <img src="<%= prod.imageUrl %>" alt="<%= prod.name || 'Product' %>"
                     class="h-48 w-full object-cover transform hover:scale-105 transition duration-300" />
              </div>
            <% } else { %>
              <div class="h-48 w-full bg-gray-200 flex items-center justify-center text-gray-400">
                No Image
              </div>
            <% } %>

            <!-- Product Info -->
            <div class="p-4 flex flex-col gap-1 sm:gap-2 flex-grow">
              <h2 class="text-base sm:text-lg font-semibold text-gray-800 line-clamp-1"><%= prod.name || 'Product' %></h2>
              <p class="text-sm text-gray-600"><%= prod.category || '' %></p>
              <p class="font-bold text-green-700">₹<%= Number(prod.pricePerKg || 0) %>/kg</p>

              <% const qty = Number(prod.availableQty || 0); %>
              <% if (qty > 0) { %>
                <% if (qty <= 5) { %>
                  <p class="text-xs sm:text-sm text-orange-500 font-medium">
                    Only <%= qty %> kg left!
                  </p>
                <% } else { %>
                  <p class="text-xs sm:text-sm text-green-500 font-medium">In Stock</p>
                <% } %>
              <% } else { %>
                <p class="text-xs sm:text-sm text-red-600 font-medium">Out of Stock</p>
              <% } %>

              <!-- View Vendors -->
              <a href="/products/<%= prod.slug %>" 
                 class="mt-3 text-center bg-green-600 text-white py-2 rounded hover:bg-green-700 transition text-sm sm:text-base">
                View Vendors
              </a>

              <!-- Add to Cart -->
              <form action="/cart/add/<%= prod._id %>" method="POST" class="mt-2">
                <button type="submit" 
                        class="w-full bg-blue-600 text-white py-1.5 rounded hover:bg-blue-700 transition text-sm sm:text-base">
                  Add to Cart
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>

    <% } %>
  </main>

  <!-- ✅ Footer -->
  <%- include('../partials/footer') %>

</body>
</html>

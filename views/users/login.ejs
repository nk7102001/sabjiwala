<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login - Sabjiwala</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col font-sans">

  <!-- Navbar -->
  <%- include('../partials/navbar') %>

  <!-- Main Content -->
  <main class="flex-grow w-full flex justify-center items-center px-3 sm:px-6 lg:px-8 py-8 sm:py-14">
    <div class="bg-white w-full max-w-md p-5 sm:p-8 rounded-lg shadow-lg">

      <!-- Page Heading -->
      <h2 class="text-2xl sm:text-3xl font-bold mb-6 text-green-700 text-center">
        Login
      </h2>

      <!-- Error Messages -->
      <% if (Array.isArray(error) && error.length) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 text-sm sm:text-base" role="alert">
          <% error.forEach(function(errMsg) { %>
            <p><%= errMsg %></p>
          <% }); %>
        </div>
      <% } %>

      <!-- Success Messages -->
      <% if (Array.isArray(success_msg) && success_msg.length) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 text-sm sm:text-base" role="alert">
          <% success_msg.forEach(function(msg) { %>
            <p><%= msg %></p>
          <% }); %>
        </div>
      <% } %>

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-4 w-full" novalidate autocomplete="off">
        <!-- Email -->
        <input 
          type="email" 
          id="email"
          name="email" 
          placeholder="Email" 
          class="w-full px-4 py-2.5 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-600 text-sm sm:text-base" 
          value="<%= (typeof email !== 'undefined' && email) ? email : '' %>"
          required
          aria-describedby="emailHelp"
          autofocus
        >
        <!-- Password -->
        <input 
          type="password" 
          id="password"
          name="password" 
          placeholder="Password" 
          class="w-full px-4 py-2.5 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-600 text-sm sm:text-base" 
          required
          aria-describedby="passwordHelp"
        >
        <!-- Submit -->
        <button type="submit" class="w-full bg-green-600 text-white py-2.5 rounded hover:bg-green-700 transition font-semibold text-sm sm:text-base">
          Login
        </button>
      </form>

      <!-- Signup Link -->
      <p class="mt-4 text-sm text-center">
        Don't have an account? 
        <a href="/signup" class="text-green-600 hover:underline font-medium">Sign up here</a>
      </p>

      <!-- Google Login -->
      <div class="mt-6">
        <a href="/auth/google" 
           class="flex items-center justify-center px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition text-sm sm:text-base"
           aria-label="Login with Google">
          <svg class="w-5 h-5 mr-2" viewBox="0 0 488 512" fill="currentColor" aria-hidden="true">
            <path d="M488 261.8C488 403.3 391.9 504 245.8 504 109.9 504 0 394.1 
                     0 258.2S109.9 12.5 245.8 12.5c66.9 0 
                     123.3 24.5 167.1 64.8l-67.8 65.1C318.3 
                     106.6 284.8 90.9 245.8 90.9c-83.1 0-150.8 
                     69-150.8 151.1s67.7 151.1 150.8 
                     151.1c73.8 0 126.7-41.4 
                     137.9-99.4H245.8v-79.3h242.2c2.2 
                     12.8 3.6 25.7 3.6 39.4z"/>
          </svg>
          Login with Google
        </a>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>
</body>
</html>
